ARG image_name
FROM $image_name
ARG IMAGE_NAME
USER root
COPY docker/scripts/entrypoint-test.sh /entrypoint-test.sh
RUN if which apk; then \
        apk add build-base --no-cache; \
    else \
        apt-get update && apt-get install apt-transport-https build-essential -y; \
    fi
RUN pip install pytest pytest-watch pytest-env pytest-cov-exclude pytest-xdist pylama mock
ENV PYTHONDONTWRITEBYTECODE 1 
USER airflow
ENTRYPOINT ["/entrypoint-test.sh"]
